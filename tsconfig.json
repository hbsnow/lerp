{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "declaration": true,
    "paths": {
      "*": ["types/*"]
    },
    "lib": [
      "es2018",
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
